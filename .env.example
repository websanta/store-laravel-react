# Application
APP_NAME="E-Commerce Store"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=https://vmmint22.local

# Logging
LOG_CHANNEL=stack
LOG_STACK=single
LOG_LEVEL=debug
LOG_DEPRECATIONS_CHANNEL=null

# Database (PostgreSQL)
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=store_db
DB_USERNAME=store_user
DB_PASSWORD=secret

# pgAdmin Configuration
PGADMIN_EMAIL=admin@store.local
PGADMIN_PASSWORD=admin

# Cache and Sessions
CACHE_STORE=redis
CACHE_PREFIX=store_cache
SESSION_DRIVER=redis
SESSION_LIFETIME=120
REDIS_CLIENT=phpredis

# Redis Configuration
REDIS_HOST=redis
REDIS_PASSWORD=redis_secret
REDIS_PORT=6379

# Queue Configuration
QUEUE_CONNECTION=redis

# Mail Configuration (Mailpit for development)
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@store.local"
MAIL_FROM_NAME="${APP_NAME}"

# Mailpit Web UI is available at http://localhost:8025

# Broadcasting
BROADCAST_CONNECTION=log
BROADCAST_DRIVER=log

# Filesystem
FILESYSTEM_DISK=local

# AWS S3 (if needed in future)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Vite Configuration
VITE_APP_NAME="${APP_NAME}"
#VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
#VITE_PUSHER_HOST="${PUSHER_HOST}"
#VITE_PUSHER_PORT="${PUSHER_PORT}"
#VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
#VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# Laravel Breeze
BREEZE_STACK=react

# Filament Configuration
FILAMENT_PATH=admin
FILAMENT_DOMAIN=

# Security
SANCTUM_STATEFUL_DOMAINS=vmmint22.local,localhost,127.0.0.1

# Xdebug Configuration (Development only)
ENABLE_XDEBUG=true
XDEBUG_MODE=debug,develop,coverage
XDEBUG_CONFIG=client_host=host.docker.internal

# Development Tools
DEBUGBAR_ENABLED=false
TELESCOPE_ENABLED=false
IGNITION_ENABLED=true

# Testing
PEST_PARALLEL=false